<% if !info.nil? %>
  <div class="alert alert-primary" role="alert">
    <%= info %>
  </div>
<% end %>

<h1>Login</h1>

<%= form_tag login_path do %>
  <%= label_tag :name %>
  <%= text_field_tag :name %>

  <%= label_tag :email %>
  <%= email_field_tag :email %>

  <%= label_tag :password %>
  <%= password_field_tag :password %>

  <%= submit_tag("Login") %>
<% end %>