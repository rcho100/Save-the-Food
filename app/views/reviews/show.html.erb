<h1><%= link_to @review.recipe.name, recipe_path(@review.recipe) %></h1>

<%= render partial: 'recipes/recipe', locals: {recipe: @review.recipe} %>
<h4>Your review:</h4>
<p><%= @review.user.name %> gives this recipe <%= pluralize(@review.rating, "star") %></p>
<p><%= @review.content %></p>

<%= link_to "Edit this review", edit_review_path(@review) %>
<%= link_to "Delete this review", review_path(@review), method: :delete, data: { confirm: "Are you sure you want to delete this review?" } %>

